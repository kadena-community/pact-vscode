{
  "name": "pactlang",
  "displayName": "PactLang",
  "description": "Pact Programming Language",
  "icon": "images/kadena-logo.png",
  "publisher": "kadena",
  "version": "0.0.6",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "pact",
        "aliases": [
          "Pact Programming Language",
          "pact"
        ],
        "extensions": [
          ".pact",
          ".repl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "pact",
        "scopeName": "source.pact",
        "path": "./syntaxes/pact.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Pact configuration",
      "properties": {
        "pact.executable": {
          "type": "string",
          "default": "pact",
          "description": "The name or path to the pact executable.",
          "scope": "window"
        },
        "pact.enableTrace": {
          "type": "boolean",
          "default": true,
          "description": "Enable pact trace output.",
          "scope": "window"
        },
        "pact.enableCoverage": {
          "type": "boolean",
          "default": false,
          "description": "Enable code coverage. Requires coverage extension for display.",
          "scope": "window"
        },
        "pact.enableLsp": {
          "type": "boolean",
          "default": false,
          "description": "Enable the pact-lsp.",
          "scope": "window"
        },
        "pact.server": {
          "type": "string",
          "default": "pact-lsp",
          "description": "Path to the Pact LSP executable (pact-lsp)",
          "scope": "window"
        }
      }
    }
  },
  "activationEvents": [
    "workspaceContains:**/.pact",
    "workspaceContains:**/.repl"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "build": "npx vsce package",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint \"src/**/*.ts\" && prettier --check \"src/**/*\"",
    "test": "node ./out/test/runTest.js",
    "coverage:html": "lcov-viewer lcov",
    "format": "prettier --write \"src/**/*\""
  },
  "devDependencies": {
    "@lcov-viewer/cli": "^1.3.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/vsce": "^2.26.0",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "glob": "^10.3.12",
    "mocha": "^10.4.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kadena-community/pact-vscode.git"
  },
  "dependencies": {
    "@pact-toolbox/installer": "^0.0.9",
    "vscode-languageclient": "^9.0.1"
  },
  "extensionDependencies": [
    "ryanluker.vscode-coverage-gutters",
    "george-alisson.html-preview-vscode"
  ]
}
